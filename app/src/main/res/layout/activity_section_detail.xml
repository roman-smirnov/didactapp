<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_scrollview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.didactapp.didact.activities.SectionDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/screen_edge_margin"
        android:layout_marginStart="@dimen/screen_edge_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/section_detail_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/vertical_margin"
            android:gravity="center"
            android:text="@string/placeholder_explanation"
            android:textSize="@dimen/typography_title" />

        <ImageView
            android:id="@+id/section_detail_illustration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/illustration_height"
            android:layout_marginTop="@dimen/vertical_margin"
            android:contentDescription="@string/content_illustration"
            android:src="@drawable/ic_book" />

        <TextView
            android:id="@+id/section_detail_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/vertical_margin"
            android:gravity="center"
            android:text="@string/placeholder_question"
            android:textSize="@dimen/typography_title" />

        <RadioGroup
            android:id="@+id/section_detail_multiple_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_edge_content_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/section_detail_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_answer" />

            <RadioButton
                android:id="@+id/section_detail_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_answer" />

            <RadioButton
                android:id="@+id/section_detail_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_answer" />

            <RadioButton
                android:id="@+id/section_detail_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_answer" />

        </RadioGroup>

        <Button
            android:id="@+id/question_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="@string/submit" />
    </LinearLayout>
</ScrollView>